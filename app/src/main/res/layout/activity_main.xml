<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.mine.autosleep.MainActivity">

        <Switch
            android:text="@string/toggle_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchApp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sleep_starts"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:id="@+id/enableSleepText"
            android:layout_below="@+id/switchApp"
            android:enabled="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_time_start"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:id="@+id/editEnableSleep"
            android:layout_below="@+id/enableSleepText"
            android:enabled="false"
            android:textAppearance="@android:style/TextAppearance.Material.Display3" />

        <RadioGroup
            android:id="@+id/radioGroupStartDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editEnableSleep"
            android:orientation="horizontal"
            android:enabled="false">
            <RadioButton
                android:id="@+id/radioToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:checked="true" />
            <RadioButton
                android:id="@+id/radioTomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomorrow" />
        </RadioGroup>

        <TextView
            android:text="@string/sleep_ends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/disableSleepText"
            android:enabled="false"
            android:layout_below="@+id/radioGroupStartDay"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/disableSleepText"
            android:layout_alignParentStart="true"
            android:weightSum="1"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_time_end"
                android:layout_gravity="bottom|start"
                android:id="@+id/editDisableSleep"
                android:enabled="false"
                android:textAppearance="@android:style/TextAppearance.Material.Display3" />

            <TextView
                android:text="@string/next_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/nextDay"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:enabled="false"
                android:layout_weight="1"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="4dp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
