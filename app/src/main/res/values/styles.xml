<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:preferenceStyle">@style/LargerPreferenceStyle</item>
        
        <item name="android:preferenceCategoryStyle">@style/LargerCategoryStyle</item>
    </style>

    <style name="LargerPreferenceStyle" parent="@android:style/Preference.Material.SwitchPreference">
        <item name="android:textAppearanceListItem">@style/PreferenceTitleText</item>
    </style>

    <style name="LargerCategoryStyle" parent="@android:style/Preference.Material.Category">
        <item name="android:textAppearance">@style/PreferenceHeaderText</item>
    </style>

    <style name="PreferenceTitleText" parent="android:TextAppearance.Material.Subhead">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PreferenceHeaderText" parent="android:TextAppearance.Material.Body2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item> </style>

</resources>
